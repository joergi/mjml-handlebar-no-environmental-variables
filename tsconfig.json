{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "esModuleInterop" : true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "app/src",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "./src/**/*.test.ts"
    ]
}
